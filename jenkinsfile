podTemplate(label: 'mypod', containers: [
    containerTemplate(name: 'git', image: 'alpine/git', ttyEnabled: true, command: 'cat'),
    containerTemplate(name: 'maven', image: 'maven:3.3.9-jdk-8-alpine', command: 'cat', ttyEnabled: true),
    containerTemplate(name: 'docker', image: 'docker', command: 'cat', ttyEnabled: true ,envVars: [containerEnvVar(key: 'DOCKER_OPTS', value: '--insecure-registry="192.168.99.1:32068"')]),
     containerTemplate(name: 'kubectl', image: 'lachlanevenson/k8s-kubectl', command: 'cat', ttyEnabled: true),

  ],
  volumes: [
    hostPathVolume(mountPath: '/var/run/docker.sock', hostPath: '/var/run/docker.sock'),
    hostPathVolume(mountPath: '/.kube/config', hostPath: '/etc/kubernetes/admin.conf'),
  ]
  ) {
      node('mypod'){
	    stage('Initialization'){
		cleanWs()
		}
		stage('Git checkout'){
		container('git'){
		checkout([$class: 'GitSCM', branches: [[name: '*/AFAS']], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'CheckoutOption', timeout: 100], [$class: 'CloneOption', noTags: false, reference: '', shallow: false, timeout: 100]], submoduleCfg: [], userRemoteConfigs: [[credentialsId: '0a5ad7f4-7fa9-4d2b-982e-997e5c27b591', url: 'https://github.com/belighmanai/CI-Project/']]])
		// this a comment
		}
		}
		stage('build'){
		//second test
		container('maven'){
		sh 'mvn clean install  sonar:sonar  -Dsonar.host.url=http://192.168.99.1:9000  -Dsonar.login=287ea60b9ad30491df0b8e9867a52bbbbed9704b'

		
		
		}
		
		}
		stage('docker'){
		container('docker'){
		 sh 'docker build . -t  ciproject_$BUILD_NUMBER:latest'
		 sh 'docker tag ciproject_$BUILD_NUMBER:latest 192.168.99.100:32068/ciproject_$BUILD_NUMBER:latest '
	     sh 'docker login 192.168.99.100:32068 --username=admin --password=admin123'
		 sh 'docker push 192.168.99.100:32068/ciproject_$BUILD_NUMBER:latest'
		}
		}
		
		stage('deployment'){
		container('kubectl'){
		   sh'kubectl apply -f deployment.yaml'
		   sh'kubectl set image deployment ciproject  ciproject=ciproject_$BUILD_NUMBER:latest '
		  sh 'kubectl expose deployment ciproject --type=NodePort --port=8010|| true'
		  //test webhook
		  
		}
		}
	  
	  
	  
	    }
	  }
